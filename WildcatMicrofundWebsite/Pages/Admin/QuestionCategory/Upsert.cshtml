@page
@model WMF.Pages.Admin.QuestionCategory.UpsertModel
@*This page allows the admin to edit the question categories after they have been input.*@

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                @*lets us dynamically change the update or create title based on the situation it is*@
                <h2 class="text-primary">@(Model.QuestionCategoriesObj.Id != 0 ? "Update" : "Create") Category</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="QuestionCategoriesObj.QuestionCategory"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="QuestionCategoriesObj.QuestionCategory" />
                        <span class="text-danger" asp-validation-for="QuestionCategoriesObj.QuestionCategory"></span>
                    </div>
                    @if (Model.QuestionCategoriesObj.Id != 0)
                    {
                        <input type="hidden" asp-for="QuestionCategoriesObj.Id" />}
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn-primary btn form-control">@(Model.QuestionCategoriesObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn-primary form-control btn">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
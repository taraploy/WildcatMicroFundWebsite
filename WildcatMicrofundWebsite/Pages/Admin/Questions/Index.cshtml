@page
@model WMF.Pages.Admin.Questions.IndexModel

@{
    ViewData["Title"] = "Index";
}

@*This page allows the admin to create/edit/delete the questions for each category.*@

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Questions</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <br /><br />
    @*we are using the "DT_Load" to display a formatted table of values from our AJAX call in our javascript page questions.js*@
    <table id="DT_load" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Question
                </th>
                <th>
                    Category
                </th>
                <th>
                    Order
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/questions.js"></script>
}
@page
@model WMF.Pages.Admin.PitchEvent.IndexModel
@{ ViewData["Title"] = "Index"; }

@*This page is used to give the admin the ability to create/edit/delete the pitch events.*@

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Pitch Events</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <br /><br />
    @*we are using the "DT_Load" to display a formatted table of values from our AJAX call in our javascript page pitches.js*@
    <table id="DT_load" class="table table-striped table-bordered">
        <thead>
            <tr>               
                <th>
                    Date
                </th>
                <th>
                    Cash Funds
                </th>
                <th>
                    Service Funds
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/pitches.js"></script>
}
@page
@model WMF.Pages.Admin.ReviewApplications.IndexModel
@*This page is used to give the admin the ability to review all applications including statuses and date of application.
    This does not give them the ability to do anything else.*@

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary text-center">Applications</h2>
        </div>
        @*<div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
            </div>*@ @*This was in place so that when we tested applications we could test this display without having to go log out and
            back in to another login to make it easier*@
        </div>

        <br />
        @* populating the DT LOAD table and generating the properites associated with the application *@
        <table id="DT_load" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Business Name
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Application Date
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
    @section Scripts{
        <script src="~/js/adminApplicationsView.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    }
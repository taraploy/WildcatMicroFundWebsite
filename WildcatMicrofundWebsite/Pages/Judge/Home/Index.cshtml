@page
@model WMF.Pages.Judge.Home.IndexModel
@*This page hasn't been implemented yet but this is where the judges will have
    the opportunity to input their scores for each judge event such as a pitch event. *@

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary text-center">Applications to be Judged<br />in Current Event</h2>
        </div>
    </div>
    <br />
    <table @*id="DT_load"*@ class="table table-striped table-bordered col-8 offset-2">
        <thead>
            <tr>
                <th>
                    <div class="ml-3">
                        Business Name
                    </div>
                </th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model.DisplayApplications)
            {
                <tr>
                    <td>
                        <div class="col-12">
                            <div class="col-8 d-inline-block">
                                <a href="/ApplicationProfile/Questions/Index?id=@application.Id">
                                    @application.BusinessName
                                </a>
                            </div>
                            <div class="col-3 d-inline-block">
                                <a href="/Judge/Home/Upsert?id=@application.Id" class="btn btn-danger text-white" style="cursor:pointer; width:100px; border-radius:5px;">
                                    <i class="fas fa-balance-scale"></i>
                                    Judge
                                </a>

                            </div>
                        </div>
                    </td>
                    @*<td class="text-center">
                            <a href="/Judge/Home/Upsert?id=@application.Id" class="btn btn-danger text-white" style="cursor:pointer; width:100px; border-radius:5px;">
                                <i class="fas fa-balance-scale"></i>
                                Judge
                            </a>
                        </td>*@
                </tr>

            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/judgeApplicationsView.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
}